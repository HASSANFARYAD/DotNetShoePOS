        $("#brandLoader").show();
        $.ajax({
            type: "GET",
            url: '../Inventory/getBsst',
            data: {
                categoryName: 1
            },
            success: function (data) {
                var listAppend = "<option value=''>Select Brand...</option>";
                for (var i = 0; i < data.length; i++) {
