
@{
    ViewBag.Title = "Details";
}

<style>
    .col-md-6, .col-md-12 {
       padding:5px;
    }
</style>

<div class="container-fluid">
    <!-- Simple lists -->
    <div id="printableArea">
        <div class="row">
            <center>
                <h5 class="text-muted">Dealer Name</h5>
                <h3 class="media-heading text-semibold">ViewBag.CustomerSales.User.Name</h3>
            </center>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <!-- Simple list -->
                <div class="panel panel-flat">
                    <div class="panel-heading" style="padding-top: 30px">
                        <center><h3 class="panel-title"><b>Customer Information</b></h3></center>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <span class="text-muted">Name</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.Name</div>
                            </div>
                            <div class="col-md-6">
                                <span class="text-muted">Email</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.Email</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">D.O.B</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.DateOfBirth</div>
                            </div>
                            <div class="col-md-6">
                                <span class="text-muted">Social Security</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.SocialSecurity</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Primary Phone</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.PrimaryPhone</div>
                            </div>
                            <div class="col-md-6">
                                <span class="text-muted">Secondary Phone</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.secondaryPhone</div>
                            </div>

                            <div class="col-md-12">
                                <h6 class="text-bold">Mailing Address</h6>
                            </div>

                            <div class="col-md-12">
                                <span class="text-muted">Address</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.MailingAddress</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">City</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.City</div>
                            </div>
                            <div class="col-md-6">
                                <span class="text-muted">State</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.State</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Zip</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.Zip</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">County</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.County</div><br>
                            </div>

                            <div class="col-md-12">
                                <h6 class="text-bold">Physical Address</h6>
                            </div>

                            <div class="col-md-12">
                                <span class="text-muted">Address</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.PhysicalAddress</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">State</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.PhysicalState</div><br>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Zip</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.PhysicalZip</div>
                            </div>

                            <div class="col-md-12">
                                <h6 class="text-bold"></h6>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Reference Name</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.ReferenceName</div><br>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Reference Phone</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Customer.ReferencePhone</div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /simple list -->

            </div>

            <div class="col-md-6">
                <!-- Simple list -->
                <div class="panel panel-flat">
                    <div class="panel-heading" style="padding-top: 30px">
                        <center><h3 class="panel-title"><b>Inventory Information</b></h3></center>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <span class="text-muted">Model</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Style</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Serial #</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.extra1</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Brand</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Brand</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Size</span>
                                <div class="media-heading text-semibold"> ViewBag.CustomerSales.Inventory.Size</div>
                            </div>


                            <div class="col-md-6">
                                <span class="text-muted">Type</span>
                                <div class="media-heading text-semibold"> ViewBag.CustomerSales.Inventory.Type</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Roof Color</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Roof</div>
                            </div>
                            <div class="col-md-6">
                                <span class="text-muted">Trim Color</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Trim</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Sides Color</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Sides</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Address </span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Address</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">City </span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.City</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">State </span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.State</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Zip </span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.Zip</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Price </span>
                                if (ViewBag.CustomerSales.Inventory.Price != null)
                                {
                                    string price = Convert.ToDecimal(ViewBag.CustomerSales.Inventory.Price).ToString("c");
                                    <div class="media-heading text-semibold">price</div>
                                }
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Inventory Date</span>
                                <div class="media-heading text-semibold">ViewBag.CustomerSales.Inventory.extra4</div>
                            </div>

                            <div class="col-md-6">
                                <span class="text-muted">Days on Lot</span>
                                if(ViewBag.CustomerSales.Inventory.extra4 != null)
                                {
                                    DateTime dt = DateTime.Now;
                                    DateTime date = Convert.ToDateTime(ViewBag.CustomerSales.Inventory.extra4);
                                    int Daysonlot = (int)(dt - date).TotalDays;
                                <div class="media-heading text-semibold">Daysonlot</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /simple list -->

            </div>
        </div>

