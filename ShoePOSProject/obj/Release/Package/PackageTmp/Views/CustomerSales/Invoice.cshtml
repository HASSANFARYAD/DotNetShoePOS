                                                        <td>
                                                            @ViewBag.Sale.User.Address
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-grey-300">
                                                            Phone 1
                                                        </td>
                                                        <td>@ViewBag.Sale.User.Phone</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-grey-300">
                                                            Order Date
