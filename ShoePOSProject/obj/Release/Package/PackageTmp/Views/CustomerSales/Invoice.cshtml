            //    url: "../CustomerSales/PostSavePdf",
            //    dataType: "json",
            //    data: {
            //        Id: SaleId,
            //        Url: Url
            //    },
            //    success: function (response) {
            //        $("#PrintButton").css({ display: "block" });
            //    },
            //    error: function () {
            //        $("#PrintButton").css({ display: "block" });
            //        alert("ajax Failed");
            //    }
            //});
            var printContents = document.getElementById("invoice").innerHTML;
