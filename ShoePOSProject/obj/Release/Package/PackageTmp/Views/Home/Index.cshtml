@{
    ViewBag.Title = "Home Page";
}
@using ShoePOSProject.HelpingClasses

<style>
    .box {
        box-shadow: 5px 5px 20px #999;
    }
</style>

<div class="row">
    @if (ViewBag.Role == 1)
    {
        <div class="col-md-12">
            <div class="text-center">
                <h1 class="text-bold"><u>Admin Dashboard</u></h1>
            </div>

            <div class="row m-5">
                <div class="col-lg-offset-3 col-lg-3 col-md-offset-3 col-md-3 col-xs-6">
                    <div class="text-center text-white box" style="padding: 25px; background: #196f9c">
                        <h3 class="text-semibold">Total Admin</h3>
                        <h2 class="text-bold"> @ViewBag.Admin</h2>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-6">
                    <div class="bg-danger text-center text-white box" style="padding: 25px; background: #37acdb ">
                        <h3 class="text-semibold">Total User</h3>
                        <h2 class="text-bold"> @ViewBag.User</h2>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="col-md-12">
            <div class="text-center">
                <h1 class="text-bold"><u>Dealer's Dashboard</u></h1>
            </div>

            <div class="row m-5">
                <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-xs-12">
                    <div class="text-center text-white box" style="padding: 25px; background: #196f9c">
                        <h3 class="text-semibold">Total Customers</h3>
                        <h2 class="text-bold"> @ViewBag.Customer</h2>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
