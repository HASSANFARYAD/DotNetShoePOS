
@{
    ViewBag.Title = "Update User";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2" id="ViewBagMessages">
        @if (ViewBag.successfullmessage != "" && ViewBag.successfullmessage != null)
        {
            <div class="alert alert-success alert-styled-left alert-arrow-left alert-bordered">
                <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
                <span class="text-semibold">Complete!</span> @ViewBag.successfullmessage.
            </div>
        }
        @if (ViewBag.errormessage != "" && ViewBag.errormessage != null)
        {
            <div class="alert alert-danger alert-styled-left alert-bordered">
                <button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
                <span class="text-semibold">Oh snap!</span> @ViewBag.errormessage <span class="alert-link">try submitting again</span>.
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form action="@Url.Action("PostUpdateUser","Admin")" method="post" enctype="multipart/form-data">
            <div class="panel panel-flat">
                <div class="panel-heading text-center">
                    <h2 class="panel-title text-center text-bold">Update User</h2>
                    <div class="heading-elements">
                        <ul class="icons-list">
                            <li><a data-action="collapse"></a></li>
                            @*<li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>*@
                        </ul>
                    </div>
                </div>
                <div class="panel-body">

                    @if (ViewBag.User.Profile != null)
                    {
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <div class="thumbnail">
                                    <div class="thumb">
                                        <img src="@ViewBag.User.Profile" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <input type="hidden" name="Id" value="@ViewBag.User.Id" />
                    <div class="form-group">
                        <label class="control-label ">Your Name: <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Name" value="@ViewBag.User.Name">
                    </div>

                    <div class="form-group">
                        <label class="control-label ">Your Email <span class="text-danger">*</span></label>
                        <input type="email" name="Email" class="form-control" id="email" required="required" value="@ViewBag.User.Email" readonly>
                    </div>

                    <div class="form-group">
                        <label class="control-label ">Your Address:</label>
                        <input type="text" class="form-control" placeholder="Address" name="Address" value="@ViewBag.User.Address">
                    </div>

                    <div class="form-group">
                        <label>Phone: </label>
                        <input type="text" class="form-control" data-mask="(999) 999-9999" value="@ViewBag.User.Phone" name="Phone">
                        <span class="help-block">(999) 999-9999</span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Image/Logo</label>
                        <input type="file" class="form-control" name="Profile" />
                        <span class="help-block text-danger">
                            <i class="icon-alert"></i>Image/Logo Size must be less than 2MB<br />
                            <i class="icon-alert"></i>Image/Logo Width and height Should be 200 x 70<br />
                        </span>
                    </div>

                    <button type="submit" id="userFormButton" class="btn bg-teal-400">Submit form <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

